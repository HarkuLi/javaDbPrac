<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>test</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
<!-- servlet -->
  <!-- user route -->
  <servlet>
    <servlet-name>showUser</servlet-name>
    <servlet-class>controller.user.ShowUsers</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userPage</servlet-name>
    <servlet-class>controller.user.GetUserPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>newUser</servlet-name>
    <servlet-class>controller.user.NewUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>controller.user.UpdateUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delUser</servlet-name>
    <servlet-class>controller.user.DeleteUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getUser</servlet-name>
    <servlet-class>controller.user.GetUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userPhoto</servlet-name>
    <servlet-class>controller.user.UserPhoto</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>changePw</servlet-name>
    <servlet-class>controller.user.ChangePassword</servlet-class>
  </servlet>
  <!-- occupation route -->
  <servlet>
    <servlet-name>showOcc</servlet-name>
    <servlet-class>controller.occ.ShowOcc</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>occPage</servlet-name>
    <servlet-class>controller.occ.GetOccPage</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>newOcc</servlet-name>
    <servlet-class>controller.occ.NewOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateOcc</servlet-name>
    <servlet-class>controller.occ.UpdateOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delOcc</servlet-name>
    <servlet-class>controller.occ.DeleteOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getOcc</servlet-name>
    <servlet-class>controller.occ.GetOcc</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>getOccList</servlet-name>
    <servlet-class>controller.occ.GetOccList</servlet-class>
  </servlet>
  <!-- interest route -->
  <servlet>
    <servlet-name>showInt</servlet-name>
    <servlet-class>controller.interest.ShowInt</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>intPage</servlet-name>
    <servlet-class>controller.interest.GetIntPage</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>newInt</servlet-name>
    <servlet-class>controller.interest.NewInt</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateInt</servlet-name>
    <servlet-class>controller.interest.UpdateInt</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delInt</servlet-name>
    <servlet-class>controller.interest.DeleteInt</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getInt</servlet-name>
    <servlet-class>controller.interest.GetInt</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>getIntList</servlet-name>
    <servlet-class>controller.interest.GetIntList</servlet-class>
  </servlet>
  <!-- sign in route -->
  <servlet>
  	<servlet-name>signInPage</servlet-name>
    <servlet-class>controller.sign.ShowSignIn</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>signInAction</servlet-name>
    <servlet-class>controller.sign.SignInAction</servlet-class>
  </servlet>
  <!-- sign out route -->
  <servlet>
  	<servlet-name>signOut</servlet-name>
    <servlet-class>controller.sign.SignOut</servlet-class>
  </servlet>

<!-- route -->
  <!-- user route -->
  <servlet-mapping>
    <servlet-name>showUser</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userPage</servlet-name>
    <url-pattern>/user/get_page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>newUser</servlet-name>
    <url-pattern>/user/new</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/user/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delUser</servlet-name>
    <url-pattern>/user/del</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getUser</servlet-name>
    <url-pattern>/user/get_one</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userPhoto</servlet-name>
    <url-pattern>/user/photo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>changePw</servlet-name>
    <url-pattern>/user/change_password</url-pattern>
  </servlet-mapping>
  <!-- occupation route -->
  <servlet-mapping>
    <servlet-name>showOcc</servlet-name>
    <url-pattern>/occ</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>occPage</servlet-name>
    <url-pattern>/occ/get_page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>newOcc</servlet-name>
    <url-pattern>/occ/new</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateOcc</servlet-name>
    <url-pattern>/occ/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delOcc</servlet-name>
    <url-pattern>/occ/del</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getOcc</servlet-name>
    <url-pattern>/occ/get_one</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getOccList</servlet-name>
    <url-pattern>/occ/get_list</url-pattern>
  </servlet-mapping>
  <!-- interest route -->
  <servlet-mapping>
    <servlet-name>showInt</servlet-name>
    <url-pattern>/interest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>intPage</servlet-name>
    <url-pattern>/interest/get_page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>newInt</servlet-name>
    <url-pattern>/interest/new</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateInt</servlet-name>
    <url-pattern>/interest/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delInt</servlet-name>
    <url-pattern>/interest/del</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getInt</servlet-name>
    <url-pattern>/interest/get_one</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getIntList</servlet-name>
    <url-pattern>/interest/get_list</url-pattern>
  </servlet-mapping>
  <!-- sign in route -->
  <servlet-mapping>
    <servlet-name>signInPage</servlet-name>
    <url-pattern>/sign_in</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>signInAction</servlet-name>
    <url-pattern>/sign_in/action</url-pattern>
  </servlet-mapping>
  <!-- sign in route -->
  <servlet-mapping>
    <servlet-name>signOut</servlet-name>
    <url-pattern>/sign_out</url-pattern>
  </servlet-mapping>

<!-- filter controller -->
<filter>
	<filter-name>signInFilter</filter-name>
	<filter-class>controller.filter.SignInFilter</filter-class>
</filter>

<!-- filter mapping -->
<filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/user/*</url-pattern>
</filter-mapping>
<filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/occ/*</url-pattern>
</filter-mapping>
<filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/interest/*</url-pattern>
</filter-mapping>



<!-- connection pool -->
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/db1</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>