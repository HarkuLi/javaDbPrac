<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>test</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
<!-- servlet -->
  <!-- user page -->
  <servlet>
    <servlet-name>showUser</servlet-name>
    <servlet-class>controller.user.ShowUsers</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>userPage</servlet-name>
    <servlet-class>controller.user.GetUserPage</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>newUser</servlet-name>
    <servlet-class>controller.user.NewUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>controller.user.UpdateUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delUser</servlet-name>
    <servlet-class>controller.user.DeleteUser</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getUser</servlet-name>
    <servlet-class>controller.user.GetUser</servlet-class>
  </servlet>
  <!-- occupation page -->
  <servlet>
    <servlet-name>showOcc</servlet-name>
    <servlet-class>controller.occ.ShowOcc</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>occPage</servlet-name>
    <servlet-class>controller.occ.GetOccPage</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>newOcc</servlet-name>
    <servlet-class>controller.occ.NewOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateOcc</servlet-name>
    <servlet-class>controller.occ.UpdateOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>delOcc</servlet-name>
    <servlet-class>controller.occ.DeleteOcc</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>getOcc</servlet-name>
    <servlet-class>controller.occ.GetOcc</servlet-class>
  </servlet>

<!-- route -->
  <!-- user page -->
  <servlet-mapping>
    <servlet-name>showUser</servlet-name>
    <url-pattern>/show_user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userPage</servlet-name>
    <url-pattern>/user_page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>newUser</servlet-name>
    <url-pattern>/new_user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/update_user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delUser</servlet-name>
    <url-pattern>/del_user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getUser</servlet-name>
    <url-pattern>/get_user</url-pattern>
  </servlet-mapping>
  <!-- occupation page -->
  <servlet-mapping>
    <servlet-name>showOcc</servlet-name>
    <url-pattern>/show_occ</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>occPage</servlet-name>
    <url-pattern>/occ_page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>newOcc</servlet-name>
    <url-pattern>/new_occ</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateOcc</servlet-name>
    <url-pattern>/update_occ</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>delOcc</servlet-name>
    <url-pattern>/del_occ</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>getOcc</servlet-name>
    <url-pattern>/get_occ</url-pattern>
  </servlet-mapping>

<!-- connection pool -->
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/db1</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>