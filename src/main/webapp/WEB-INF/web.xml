<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>test</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/index.html</welcome-file>
  </welcome-file-list>

  <!-- filter controller -->
  <filter>
	<filter-name>signInFilter</filter-name>
	<filter-class>controller.filter.SignInFilter</filter-class>
  </filter>

  <!-- filter mapping -->
  <filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/user/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/occ/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
	<filter-name>signInFilter</filter-name>
	<url-pattern>/interest/*</url-pattern>
  </filter-mapping>

  <!-- dispatcher -->
  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>
      org.springframework.web.servlet.DispatcherServlet
    </servlet-class>
    <init-param>
    	<param-name>contextClass</param-name>
    	<param-value>
    		org.springframework.web.context.support.AnnotationConfigWebApplicationContext
    	</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>config.ServletConfig</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  

</web-app>














